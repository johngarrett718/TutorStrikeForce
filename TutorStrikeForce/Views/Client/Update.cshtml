@using TutorStrikeForce.ViewModels
@model ClientEditModel
@{ 
    ViewBag.Title = "Update Client";
}

<form asp-action="Update" asp-route-clientId="@Model.ClientId" method="post">
    <div class="input-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span class="validation-error" asp-validation-for="FirstName"></span>
    </div>

    <div class="input-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span class="validation-error" asp-validation-for="LastName"></span>
    </div>

    <div class="input-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span class="validation-error" asp-validation-for="Email"></span>
    </div>

    <div class="input-group">
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span class="validation-error" asp-validation-for="City"></span>
    </div>

    <div class="input-group">
        <label asp-for="Hours"></label>
        <input type="number" step="0.01" asp-for="Hours" />
        <span class="validation-error" asp-validation-for="Hours"></span>
    </div>

    <input class="primaryButton" type="submit" name="save" value="Save" />
</form>